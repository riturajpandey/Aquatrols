<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:alpha="1"
    android:background="@color/appBackground">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/InnercontentMargin"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/LogoWidth"
            android:layout_height="@dimen/ProductDetailImageLogoHeight"
            android:src="@drawable/ApproachLogoCircleWhite"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00000000" />
        <TextView
            android:text="Your Membership is Waiting Approval"
            android:textSize="@dimen/InnerLabelAboutusPageSize"
            android:textColor="#FFF"
            android:letterSpacing=".1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/txtEntertheemail"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ForgotPasswordMarginTop"
            android:layout_marginLeft="@dimen/ForgotPasswordMargin"
            android:gravity="right"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnCancelForEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:textColor="@color/appHeaderControls"
                android:textSize="@dimen/InnerLabelTextsize"
                android:text="Continue"
                android:letterSpacing=".2"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"  />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>